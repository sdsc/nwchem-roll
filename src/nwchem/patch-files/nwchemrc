export LARGE_FILES=TRUE
export NWCHEM_TARGET=LINUX64
export USE_MPI=y
export USE_MPIF=y
export USE_MPIF4=y
export MPI_HOME=ROLLMPIHOME
export MPI_LIB=${MPI_HOME}/lib
export MPI_INCLUDE=${MPI_HOME}/include
ROLL_openmpi_mx export LIBMPI=" -L/opt/mx/lib -L${MPI_LIB} -lmpi_f77 -lmpi -lmyriexpress -lrt -lnsl -lutil -ldl -lm -lrt -lnsl -lutil"
ROLL_openmpi_mx export ARMCI_NETWORK=GM
ROLL_openmpi_ib export LIBMPI="-L/opt/torque/lib -Wl,--rpath -Wl,/opt/torque/lib -L${MPI_LIB} -lmpi -lrdmacm -libverbs -lnsl -lutil -ltorque -ldl -lnsl -lutil"
ROLL_openmpi_ib ARMCI_NETWORK=OPENIB
ROLL_mvapich2_ib export LIBMPI=" -L${MPI_LIB} -L/usr/lib64 -L/opt/mvapich2/intel/ib/lib -Wl,-rpath,${MPI_LIB} -lmpich -lopa -lmpl -lpthread -llimic2 -lrdmacm -libverbs -libumad -ldl -lrt"
ROLL_mvapich2_ib export ARMCI_NETWORK=OPENIB
ROLL_vsmp_ib export LIBMPI=" -L${MPI_LIB} -Wl,-rpath -Wl,${MPI_LIB} -lmpich -lopa -lmpl -lrt -lpthread"
ROLL_vsmp_ib export ARMCI_NETWORK=OPENIB
ROLL_mpich2_ib export LIBMPI=" -L${MPI_LIB} -Wl,-rpath,${MPI_LIB} -lmpich -lopa -lmpl -lrt -lpthread"
ROLL_mpich2_ib export ARMCI_NETWORK=OPENIB
ROLL_mpich2_mx export LIBMPI=" -pthread -xHOST -L/opt/mx/lib -L${MPI_LIB} -lmpi -lmyriexpress -lrt -lnsl -lutil -ldl -lm -lrt -lnsl -lutil"
ROLL_mpich2_mx export ARMCI_NETWORK=GM
