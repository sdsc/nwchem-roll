export LARGE_FILES=TRUE
export NWCHEM_TOP=/tmp/nwchem-6.1
export NWCHEM_TARGET=LINUX64
export USE_MPI=y
export USE_MPIF=y
export USE_MPIF4=y
export MPI_HOME=ROLLMPIHOME
export MPI_LIB=${MPI_HOME}/lib
export MPI_INCLUDE=${MPI_HOME}/include
ROLL_openmpi_mx export LIBMPI=" -I${MPI_INCLUDE}  -L/opt/mx/lib -L/opt/torque/lib -Wl,--rpath -Wl,/opt/torque/lib -L${MPI_LIB} -lmpi_f77 -lmpi -lopen-rte -lopen-pal -lmyriexpress -ltorque -ldl -lnsl -lutil"
ROLL_openmpi_mx export ARMCI_NETWORK=GM
ROLL_openmpi_ib export LIBMPI=" -I${MPI_INCLUDE} -L/opt/torque/lib -Wl,--rpath -Wl,/opt/torque/lib -L${MPI_LIB} -lmpi_f77 -lmpi -lopen-rte -lopen-pal -libverbs -ltorque -ldl -lnsl -lutil"
ROLL_openmpi_ib ARMCI_NETWORK=OPENIB
ROLL_mvapich2_ib export LIBMPI="-L/usr/lib64 -I${MPI_INCLUDE} -L/opt/mvapich2/intel/ib/lib -Wl,-rpath -Wl,/opt/mvapich2/intel/ib/lib -lmpich -lopa -lmpl -lpthread -lrdmacm -libverbs -libumad -ldl -lrt"
ROLL_mvapich2_ib export ARMCI_NETWORK=OPENIB
ROLL_vsmp_ib export LIBMPI="-I${MPI_INCLUDE} -L${MPI_LIB} -Wl,-rpath -Wl,${MPI_LIB} -lmpich -lopa -lmpl -lrt -lpthread"
ROLL_vsmp_ib export ARMCI_NETWORK=OPENIB
ROLL_mpich2_ib export LIBMPI="-I${MPI_INCLUDE} -L${MPI_LIB} -Wl,-rpath -Wl,${MPI_LIB} -lmpich -lopa -lmpl -lrt -lpthread"
ROLL_mpich2_ib export ARMCI_NETWORK=OPENIB
ROLL_mpich2_mx export LIBMPI="-L/opt/mx/lib -I/opt/mpich2/intel/mx/include -L/opt/mpich2/intel/mx/lib -Wl,-rpath -Wl,/opt/mpich2/intel/mx/lib -lmpich -lopa -lmpl -lrt -lmyriexpress -lpthread"
ROLL_mpich2_mx export ARMCI_NETWORK=GM
